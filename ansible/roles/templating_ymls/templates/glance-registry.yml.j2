---
apiVersion: v1
kind: Service
metadata:
  name: glance-registry
spec:
  ports:
  - name: glance
    port: 9191
    protocol: TCP
    targetPort: 9191
  selector:
    app: glance-registry

---
apiVersion: v1
kind: ReplicationController
metadata:
  name: glance-registry
spec:
  replicas: 1
  selector:
    app: glance-registry
  template:
    metadata:
      labels:
        app: glance-registry
      name: glance-registry
    spec:
      nodeSelector:
        app: non-persistent-control
      containers:
        - name: glance-registry
          image: {{ docker_registry }}/centos-binary-glance-registry:{{ image_version }}
          env:
            - name: KOLLA_SKIP_EXTEND_START
              value: ""
            - name: KOLLA_CONFIG_STRATEGY
              value: COPY_ONCE
            - name: KOLLA_CONFIG
              value: '{"command": "kolla_mesos_start","config_files":[{"source": "zk://zookeeper:2181/kolla/common/kolla_mesos_start.py","dest": "/usr/local/bin/kolla_mesos_start","owner": "root","perm": "0755"}]}'
            - name: KOLLA_LOGLEVEL
              value: info
            - name: KOLLA_ZK_HOSTS
              value: zookeeper:2181
            - name: KOLLA_PRIVATE_INTERFACE
              value: eth0
            - name: KOLLA_PUBLIC_INTERFACE
              value: eth0
            - name: ZK_APP_ID
              value: /root/openstack/glance-registry/glance-registry
          ports:
          - containerPort: 9191
            name: glance
            protocol: TCP
          resources:
            limits:
              memory: 4000Mi
