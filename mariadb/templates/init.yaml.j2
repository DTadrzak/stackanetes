apiVersion: batch/v1
kind: Job
spec:
  template:
    metadata:
      labels:
        app: mariadb
    spec:
      restartPolicy: Never
      # TODO(DTadrzak): it must be removed in future
      securityContext:
        runAsUser: 0
      terminationGracePeriodSeconds: 10000
      containers:
        - name: mariadb-init
          image: {{ deployment.image.mariadb }}
          imagePullPolicy: Always
          # TODO(DTadrzak): it must be removed in future
          securityContext:
            privileged: true
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/seed.sh"
            - name: ANSIBLE_LIBRARY
              value: "/usr/share/ansible/"
            - name: DEPENDENCY_CONFIG
              value: "/tmp/seed.sh,/tmp/peer-finder.py,/etc/my.cnf.d/charsets.cnf,/etc/my.cnf.d/engine.cnf,/etc/my.cnf.d/log.cnf,/etc/my.cnf,/etc/my.cnf.d/networking.cnf,/etc/my.cnf.d/pid.cnf,/etc/my.cnf.d/tuning.cnf,/etc/my.cnf.d/wsrep.cnf"
          ports:
            - containerPort: {{ network.port.mariadb }}
          volumeMounts:
            - name: seedsh
              mountPath: /configmaps/seed.sh
            - name: peer-finder
              mountPath: /configmaps/peer-finder.py
            - name: charsets
              mountPath: /configmaps/charsets.cnf
            - name: engine
              mountPath: /configmaps/engine.cnf
            - name: log
              mountPath: /configmaps/log.cnf
            - name: mycnf
              mountPath: /configmaps/my.cnf
            - name: networking
              mountPath: /configmaps/networking.cnf
            - name: pid
              mountPath: /configmaps/pid.cnf
            - name: tuning
              mountPath: /configmaps/tuning.cnf
            - name: wsrep
              mountPath: /configmaps/wsrep.cnf
      volumes:
        - name: seedsh
          configMap:
            name: seedsh
        - name: peer-finder
          configMap:
            name: mariadb-peer-finder
        - name: charsets
          configMap:
            name: mariadb-charsets
        - name: engine
          configMap:
            name: mariadb-engine
        - name: log
          configMap:
            name: mariadb-log
        - name: mycnf
          configMap:
            name: mariadb-mycnf
        - name: networking
          configMap:
            name: mariadb-networking
        - name: pid
          configMap:
            name: mariadb-pid
        - name: tuning
          configMap:
            name: mariadb-tuning
        - name: wsrep
          configMap:
            name: mariadb-wsrep
