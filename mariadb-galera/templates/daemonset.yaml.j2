apiVersion: extensions/v1beta1
kind: DaemonSet
spec:
  template:
    metadata:
      labels:
        app: mariadb-galera
    spec:
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      # TODO(DTadrzak): it must be removed in the future
      securityContext:
        runAsUser: 0
      containers:
        - name: mariadb
          image: {{ deployment.image.mariadb }}
          # TODO(mateusz-blaszkowski): temporarily removed for faster debugging process
          # imagePullPolicy: Always
          imagePullPolicy: IfNotPresent
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/mariadb-galera-start.sh"
            - name: DEPENDENCY_CONFIG
              value: "/tmp/mariadb-galera-start.sh,/tmp/peer-finder.py,/etc/my.cnf,/etc/my.cnf.d/charsets.cnf,/etc/my.cnf.d/engine.cnf,/etc/my.cnf.d/log.cnf,/etc/my.cnf.d/networking.cnf,/etc/my.cnf.d/pid.cnf,/etc/my.cnf.d/tuning.cnf,/etc/my.cnf.d/wsrep.cnf"
          ports:
            - containerPort: {{ network.port.mariadb }}
          readinessProbe:
            tcpSocket:
              port: {{ network.port.mariadb }}
          volumeMounts:
            - name: startsh
              mountPath: /configmaps/mariadb-galera-start.sh
            - name: peer-finder
              mountPath: /configmaps/peer-finder.py
            - name: charsets
              mountPath: /configmaps/charsets.cnf
            - name: engine
              mountPath: /configmaps/engine.cnf
            - name: mycnf
              mountPath: /configmaps/my.cnf
            - name: log
              mountPath: /configmaps/log.cnf
            - name: networking
              mountPath: /configmaps/networking.cnf
            - name: pid
              mountPath: /configmaps/pid.cnf
            - name: tuning
              mountPath: /configmaps/tuning.cnf
            - name: wsrep
              mountPath: /configmaps/wsrep.cnf
            - name: mysql
              mountPath: /var/lib/mysql
      volumes:
        - name: startsh
          configMap:
            name: mariadb-galera-startsh
        - name: peer-finder
          configMap:
            name: mariadb-galera-peer-finder
        - name: charsets
          configMap:
            name: mariadb-galera-charsets
        - name: engine
          configMap:
            name: mariadb-galera-engine
        - name: mycnf
          configMap:
            name: mariadb-galera-mycnf
        - name: log
          configMap:
            name: mariadb-galera-log
        - name: networking
          configMap:
            name: mariadb-galera-networking
        - name: pid
          configMap:
            name: mariadb-galera-pid
        - name: tuning
          configMap:
            name: mariadb-galera-tuning
        - name: wsrep
          configMap:
            name: mariadb-galera-wsrep
        - name: mysql
          emptyDir: {}
